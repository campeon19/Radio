public class miRadio implements radio{

    private boolean prendido = false;
    private float[] guardado_AM = new int[12];
    private float[] guardado_FM = new int[12];
    private float estaciones;
    private String frecuencia;

    public miRadio(){
        estaciones = 87.9;
        frecuencia = "a.m";
    }

    public void onOff(){
        if(prendido == false){
            prendido = true;
        } else if(prendido = true){
            prendido = false;
        }
    }

    public boolean estado(){
        return prendido;
    }

    public void cambiarFrecuencia(){
        if(frecuencia.equalsIgnoreCase("a.m")){
            frecuencia = "f.m";
        } else if(frecuencia.equalsIgnoreCase("f.m")){
            frecuencia = "a.m";
        }
    }

    public void avanzar(){
        if(estacion < 107.9){
            estaciones = estaciones + 0.2;
        } else if(estaciones == 107.9){
            estaciones = 87.9;
        }
    }

    public void guardar(int x){
        int y = x-1;
        if(frecuencia.equalsIgnoreCase("a.m")){
            guardado_AM[x] = estaciones;
        } else if(frecuencia.equalsIgnoreCase("f.m")){
            guardado_FM[x] = estaciones;
        }
    }

    public void seleccionarEmisora(int boton){
        int y = boton - 1;
        if(frecuencia.equalsIgnoreCase("a.m")){
            estaciones = guardado_AM[y];
        } else if(frecuencia.equalsIgnoreCase("f.m")){
            estaciones = guardado_FM[y];
        }
    } 

    public String estacionActual(){
        String devolver_estacion = String.valueOf(estaciones);

        return devolver_estacion;
    }

}
